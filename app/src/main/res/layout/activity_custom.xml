<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".custom">

    <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calendarView" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.488"/>
    <Button
            android:text="@string/btnConvert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnConvert2" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/calendarView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:fontFamily="@font/stardew_valley"
            android:textSize="24sp"/>
    <Button
            android:text="@string/btnMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMain" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btnConvert2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="24sp" android:fontFamily="@font/stardew_valley"/>
</androidx.constraintlayout.widget.ConstraintLayout>